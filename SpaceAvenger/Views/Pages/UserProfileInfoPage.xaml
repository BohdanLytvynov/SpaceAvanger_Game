<Page x:Class="SpaceAvenger.Views.Pages.UserProfileInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceAvenger.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfileInfoPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#E5244074" Offset="0"/>
                <GradientStop Color="#CC000205" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" 
                    Text="Commander Profile Info:" 
                    Margin="20,0,20,0"
                   Style="{StaticResource textBlockHeaders}"/>
        <Grid Grid.Row="1" x:Name="Info">
            <DockPanel>
                <Image/>
            </DockPanel>
        </Grid>
    </Grid>
</Page>
