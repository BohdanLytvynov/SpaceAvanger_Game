<Window
    x:Class="MonoGameEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:monoGameControls="clr-namespace:MonoGameEditor.MonoGameControls"
    xmlns:local="clr-namespace:MonoGameEditor"
    xmlns:main_vm ="clr-namespace:MonoGameEditor.ViewModels.Windows"
    mc:Ignorable="d"
    Title="MonoGameEditor"
    WindowState="Maximized" Width="800" Height="600"
    d:DataContext="{d:DesignInstance main_vm:MainWindowViewModel, 
    IsDesignTimeCreatable=True}"
    >
    <monoGameControls:MonoGameContentControl 
        x:Name="mg_control"
        Grid.Column="1"/>
</Window>
